<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetilFavorite">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_detail"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"/>


            <TextView
                android:id="@+id/tv_detail_judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_detail"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:text="JUDUL FILM"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_detail_judul"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:text="RATING IMDB"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#0984e3"/>

            <TextView
                android:id="@+id/tv_desc_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_rating"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:text="DESCKRIPSI"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>